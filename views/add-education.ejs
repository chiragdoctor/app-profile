<!-- @format -->

<section class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1 class="large text-primary">
                Add Your Education
            </h1>
        </div>
        <div class="card-title mt-3">
            <p class="lead">
                <i class="fas fa-graduation-cap"></i> Add any school, bootcamp, etc that you have attended
            </p>
        </div>
        <div class="card-body">
            <small>* = required field</small>
            <form class="form" action="/profile/education/<%= user._id%>" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="* School or Bootcamp" name="school" required class="form-control" />
                </div>
                <div class="form-group">
                    <input type="text" placeholder="* Degree or Certificate" name="degree" required class="form-control" />
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Field Of Study" name="fieldofstudy" class="form-control" />
                </div>
                <div class="form-group">
                    <h4>From Date</h4>
                    <input type="date" name="from" class="form-control" />
                </div>
                <div class="form-group">
                    <p>
                        <input type="checkbox" name="current" value="" /> Current School or Bootcamp
                    </p>
                </div>
                <div class="form-group">
                    <h4>To Date</h4>
                    <input type="date" name="to" class="form-control" />
                </div>
                <div class="form-group">
                    <textarea name="description" cols="30" rows="5" placeholder="Program Description" class="form-control"></textarea>
                </div>
                <input type="submit" class="btn btn-primary my-1" />
                <a class="btn btn-light my-1" href="/dashboard/<%= user._id%>">Go Back</a
				>
			</form>
		</div>
	</div>
</section>