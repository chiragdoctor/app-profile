<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1 class="large text-primary">
                Dashboard
            </h1>
        </div>
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%= user.avatar%>" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-user"> </i> Welcome
                        <%= user.firstName%>
                            <%= user.lastName%>
                    </h5>
                    <p class="card-text">
                        <p class="lead">
                            <%= user.email%>
                        </p>
                    </p>
                    <% if(profile){%>
                        <div class="dash-buttons">
                            <a href="/profile/edit/<%= profile._id%>" class="btn btn-light"><i class="fas fa-user-circle text-primary"></i> Edit Profile</a>
                            <a href="/profile/experience/<%= user._id%>" class="btn btn-light"><i class="fab fa-black-tie text-primary"></i> Add Experience</a>
                            <a href="/profile/education/<%= user._id%>" class="btn btn-light"><i class="fas fa-graduation-cap text-primary"></i> Add Education</a
        >
        <a href="/profile/user/<%= user._id%>" class="btn btn-light"> <i class="fas fa-user-circle text-primary"></i>View Profile</a>
                        </div>
                        <h2 class="my-2">Experience Credentials</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th class="hide-sm">Title</th>
                                    <th class="hide-sm">Years</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% profile.experience.forEach(function(exp) { %>
                                    <tr>
                                        <td>
                                            <%= exp.company %>
                                        </td>
                                        <td>
                                            <%= exp.title %>
                                        </td>
                                        <td>
                                            <time><%= new Date(exp.from).toLocaleDateString('en-GB', { year: 'numeric', month: 'numeric', day: 'numeric'})%></time> -
                                            <time><%= new Date(exp.to).toLocaleDateString('en-GB', { year: 'numeric', month: 'numeric', day: 'numeric'})%></time>
                                        </td>
                                        <td>
                                            <form action="/profile/experience/<%= profile.user._id %>/<%= profile._id %>/<%= exp._id %>" method="post">
                                                <input type="submit" class="btn btn-danger" value="Delete">
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <h2 class="my-2">Education Credentials</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>School</th>
                                    <th class="hide-sm">Degree</th>
                                    <th class="hide-sm">Years</th>
                                    <th />
                                </tr>
                            </thead>
                            <tbody>
                                <% profile.education.forEach(function(edu) { %>
                                    <tr>
                                        <td>
                                            <%= edu.school %>
                                        </td>
                                        <td>
                                            <%= edu.degree %>
                                        </td>
                                        <td>
                                            <time><%= new Date(edu.from).toLocaleDateString('en-GB', { year: 'numeric', month: 'numeric', day: 'numeric'})%></time> -
                                            <time><%= new Date(edu.to).toLocaleDateString('en-GB', { year: 'numeric', month: 'numeric', day: 'numeric'})%></time>
                                        </td>
                                        <td>
                                            <form action="/profile/education/<%= profile.user._id %>/<%= profile._id %>/<%= edu._id %>" method="post">
                                                <input type="submit" class="btn btn-danger" value="Delete">
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <div class="my-2">
                            <form action="/profile/delete/<%= user._id%>" method="POST">
                                <button class="btn btn-danger">
                <i class="fas fa-user-minus"></i>
                Delete My Account
            </button>
                            </form>
                        </div>
                        <%} else{%>
                            <a href="/profile/<%= user._id%>" class="btn btn-info">Create Profile</a>
                            <%}%>
                </div>
            </div>
        </div>
    </div>
</div>