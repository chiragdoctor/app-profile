
<div class="container mt-5">
  <div class="card" style="max-width: 540px;">
    <div class="card-header"> 
      <h1>Welcome to Dashboard</h1>
      </div>
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="<%= user.avatar%>" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= user.firstName%> <%= user.lastName%></h5>
        <p class="card-text"><p class="lead"><%= user.email%> </p></p>
        <% if(profile){%>
        <a href="/profile/user/<%= user._id%>" class="btn btn-info">View Profile</a>
        <%} else{%>
       <a href="/profile/<%= user._id%>" class="btn btn-info">Create Profile</a>
       <%}%>
      </div>
    </div>
  </div>
</div>
</div>