<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
    <link href="/stylesheets/register.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
</head>
<body>
    <nav>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-4">
            <div class="container">
                <a class="navbar-brand" href="/">Hello</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mobile-nav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mobile-nav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a class="nav-link" href="/profile/all/<%= user._id %>"> Profiles</a></li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link" href="/dashboard/<%= user._id%>">Dashboard</a></li>
                        <li class="nav-item">
                            <a href="/login" class="nav-link">
                                <img class="rounded-circle" src="<%= user.avatar %>" alt="<%= user.firstname %>" title="You must have a Gravatar connected to your email to display an image" style="width: 25px; margin-right: 5px;">Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </nav>
    <div class="container m-auto">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">Profiles</h1>
                <p class="lead text-center"> Connect with other profiles</p>
                <% profiles.forEach(function(profile ) { %>
                <div class="card card-body bg-light mb-3">
                    <div class="row">
                        <div class="col-md-3">
                            <img src="<%= profile.user.avatar %>" alt="<%= profile.user.firstname%>" class="rounded-circle">
                        </div>
                        <div class="col-md-5">
                            <h3><%= profile.user.firstname%> <%= profile.user.lastname%></h3>
                            <p><%= profile.status%></p>
                            <p>
                                <span><%= profile.location %></span>
                            </p>
                            <a class="btn btn-info" href="/profile/<%= profile._id%>">View Profile</a>
                        </div>
                        <div class="col-md-4 d-none d-md-block">
                            <h4>Skill Set</h4>
                            <ul class="list-group">
                                <% profile.skills[0].split(',').forEach(function(skill) { %>
                                    <li class="list-group-item">
                                        <i class="fa fa-check pr-1"></i><%= skill %>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% });%>            
            </div>
        </div>
    </div>
    <div>
        <footer class="bg-dark text-white mt-5 p-4 text-center">Copyright Â© 2020 Profiles.com</footer>
    </div>
</body>
</html>